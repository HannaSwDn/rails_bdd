<h1>Edit article:</h1>

<%= form_for @article do |article| %>
    <p>
        <%= article.label :title %><br>
        <%= article.text_field :title %>
    </p>

    <p>
        <%= article.label :content %><br>
        <%= article.text_area :content %>
    </p>

    <p>
        <%= article.label :comment %><br>
        <%= article.text_area :comment %>
    </p>

    <p>
        <%= article.submit %>
    </p>
<% end %>

<%= link_to 'Homepage', welcome_index_path %>